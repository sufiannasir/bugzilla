<h1>Projects</h1>
<div class="table-responsive">
<table class="table table-hover table-striped text-center">
	<thead>
		<tr>
			<th class="text-center">Title</th>
			<th class="text-center">Description</th>
			<th class="text-center">Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @projects.each do |project| %>
		<tr>
			<td><%=  project["title"] %></td>
			<td><%=  project["description"] %></td>

			<td>
				<% if @session[:role]== "manager" then %>

				<%= link_to "Delete Project", "/project/delete/#{project.id}" , :class => "btn btn-danger" %>
				<%= link_to "Show Users", "/project/userslist/#{project.id}"  , :class => "btn btn-info" %>
				<% end %>

				<%= link_to "Show Bugs", "/bugs/list/#{project.id}", :class => "btn btn-primary" %>

			</td>
		</tr>
		<% end %>
	</tbody>
</table>
</div>