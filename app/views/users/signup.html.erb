<h1>User Signup</h1>

<div class="col-md-6 col-md-offset-3">
<%= form_for @user, :url=> signup_process_path do |f| -%> 

<div class="pull-left"> <%= f.label :name %>: </div><%= f.text_field :name, :class => "form-control" %>
<div class="pull-left"><%= f.label :email %>:  </div><%= f.email_field :email , :class => "form-control"%>
<div class="pull-left"><%= f.label :password %>:  </div><%= f.password_field :password, :class => "form-control"%>
<div class="pull-left"><%= f.label :user_type %>:  </div><%= f.select(:user_type,[["Developer","developer"], ["Manager","manager"], ["QA","qa"]],{}, {:class => "form-control"}) %>
<%= f.submit :signup, :class => "btn btn-lg btn-primary m-20" %> <% end -%>
</div>

